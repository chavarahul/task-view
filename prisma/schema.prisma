
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  password  String
  role      String  
  adminId   String?  @db.ObjectId 
}

model AdminToken {
  id      String  @id @default(auto()) @map("_id") @db.ObjectId
  token   String  @unique
  adminId String  @db.ObjectId 
}

